<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/v2_colorPrimary</item>
        <item name="colorPrimaryDark">@color/v2_colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/upboltersnewregular</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorAccent">@color/v2_colorPrimary</item>
        <item name="colorPrimary">@color/v2_colorPrimary</item>
        <item name="colorPrimaryDark">@color/v2_colorPrimaryDark</item>
    </style>
    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="ToolbarTextAppearance.Title" parent="@style/ToolbarTextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ToolbarTextAppearance.total" parent="@style/ToolbarTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>
</resources>