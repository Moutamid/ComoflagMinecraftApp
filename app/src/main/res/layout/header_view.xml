<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="120dp">
    <ImageView android:id="@+id/app_icon_nav" android:layout_width="82dp" android:layout_height="82dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:src="@mipmap/ic_launcher" android:layout_centerVertical="true"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/app_icon_nav" android:layout_centerVertical="true">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/app_name_nav" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name"/>
        <TextView android:textSize="13sp" android:textColor="@color/secondary_text_color" android:id="@+id/second_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Second Text Below" android:layout_below="@+id/app_name_nav"/>
    </RelativeLayout>
    <View android:background="@color/navigation_separator" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
